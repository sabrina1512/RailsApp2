<!DOCTYPE html>
<html>
  <head>
    <title>RailsApp</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <!-- navbar-->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="projectName">
          <a class="navbar-brand" href="#">Bike Berlin</a>
        </div> <!--end projectName -->
      </div> <!--end navbar-header -->
      <div class="navbar-collapse collapse" id="navbar-right">
        <ul class="nav navbar-nav navbar-right">
          <li id="home_anchor"><%= link_to 'Home', root_path %></a></li>
          <li><%= link_to 'Contact', static_pages_contact_path %></a></li>
          <li><%= link_to 'About', static_pages_about_path %></a></li>
          <li><%= link_to 'Products', products_path %></a></li>
          <%= form_with(url: products_path, method: 'get', local: true) do |form| %>
          <%= form.label :q, 'Search for:' %>
          <%= form.text_field :q, id: 'q', value: params[:q] %>
          <%= form.submit 'Search' %>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <li>
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
          <% else %>
            <%= link_to('Login', new_user_session_path) %>
          <% end %>
          </li>
        </ul>
      </div> <!-- end navbar-->
    </nav> <!-- end navbar-->

		<%= yield %>

		<footer>
  		&copy; 2017 Bike Berlin
		</footer>
  </body>
</html>


